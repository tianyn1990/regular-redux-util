{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "globals":{
  },
  "rules": {
    "semi": [2, "always"], 
    "semi-spacing": [2, { "before": false, "after": true }], 
    "no-mixed-spaces-and-tabs": 2,
    "indent": [2, 4,{
      "SwitchCase": 1 ,
      "VariableDeclarator": 1 ,
      "outerIIFEBody": 1 ,
      "MemberExpression": 1 ,
      "FunctionDeclaration": {"body": 1, "parameters": 2} ,
      "FunctionExpression": {"body": 1, "parameters": 2} ,
      "CallExpression": {"arguments": 1}
    }],
    "no-multiple-empty-lines": [2,{ "max": 2, "maxEOF": 1 }], 
    "space-before-function-paren": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "quotes":[1,"single"], 
    "quote-props": [2, "as-needed"],
    "array-bracket-spacing": [2, "never"], 
    "camelcase": 2,
    "no-inner-declarations": [2, "functions"], 
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "never"
    }],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "comma-style": ["error", "last"],
    "brace-style": ["error", "1tbs"],
    "func-call-spacing": ["error", "never"],
    "key-spacing": ["error", {
      "beforeColon": false,
      "afterColon": true,
      "mode": "strict"
    }],
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2, 
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-debugger": 2,
    "no-dupe-args": 2, 
    "no-dupe-keys": 2,
    "no-func-assign": 2,
    "max-depth":[2,5],
    "max-len":[2,160], 
    "max-nested-callbacks":[2,5], 
    "max-statements":[2,50], 
    "complexity":[1, 30], 
    "default-case":2, 
    "guard-for-in":1,
    "no-empty": 2,
    "no-empty-function":1, 
    "no-unreachable": 2,
    "no-global-assign":2,
    "no-unexpected-multiline": 2,
    "no-sparse-arrays": 2,
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-unused-vars": 2, 
    "no-use-before-define":[2 ,{ "functions": false }], 
    "block-scoped-var":0, 
    "eqeqeq":[0], 
    "no-alert":[1],
    "no-caller":[1], 
    "no-div-regex": 2,
    "no-case-declarations": 2,
    "dot-notation": [2, { "allowKeywords": true }],
    "no-cond-assign": 2, 
    "no-else-return": 1, 
    "no-multi-spaces": 1, 
    "no-proto": 2,
    "no-multi-str":1,
    "no-new-wrappers":2,  
    "no-array-constructor": 2,
    "no-loop-func": 2,
    "no-redeclare": [2, {"builtinGlobals": true}],
    "curly": 2,
    "no-self-assign": 2, 
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-unmodified-loop-condition": 2,
    "no-useless-concat":2,  
    "no-useless-escape":2,
    "no-with":2, 
    "no-eval":2,  
    "no-negated-condition": 1,
    "wrap-iife":[2,"any"], 
    "no-delete-var": 2,
    "no-useless-call": 2, 
    "no-constant-condition":2,
    "no-throw-literal":1, 
    "no-unsafe-negation":2, 
    "valid-typeof":2,
    "new-parens": 2,
    "no-labels": 2 
  }
}